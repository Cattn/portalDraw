{
	"name": "portaldraw",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "concurrently \"npm run dev:api\" \"npm run dev:frontend\"",
		"dev:frontend": "vite dev",
		"dev:api": "cd api && npm run dev",
		"build": "npm run build:api && npm run build:frontend",
		"build:frontend": "vite build",
		"build:api": "cd api && npm run build",
		"start": "concurrently \"npm run start:api\" \"npm run start:frontend\"",
		"start:frontend": "node server.js",
		"start:api": "cd api && npm start",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint ."
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@lucide/svelte": "^0.513.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.3",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@types/eslint": "^9.6.0",
		"@types/lodash-es": "^4.17.12",
		"@types/sqlite3": "^3.1.11",
		"@types/uuid": "^10.0.0",
		"@types/ws": "^8.18.1",
		"@ubermanu/sveltekit-websocket": "^0.3.3",
		"clsx": "^2.1.1",
		"concurrently": "^9.2.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"lodash-es": "^4.17.21",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.14.0",
		"svelte-check": "^4.0.0",
		"tailwind-merge": "^3.3.0",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "^4.0.0",
		"tw-animate-css": "^1.3.4",
		"typescript": "^5.7.0",
		"typescript-eslint": "^8.20.0",
		"uuid": "^9.0.1",
		"vite": "^5.0.3"
	},
	"dependencies": {
		"@iconify/icons-material-symbols": "^1.2.58",
		"m3-svelte": "^4.4.0",
		"socket.io-client": "^4.8.1",
		"sqlite3": "^5.1.7"
	}
}
